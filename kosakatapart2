<body>

    <div class="container">
        <h1>Hafalan Kosakata</h1>
        <p class="word">Klik "Selanjutnya" untuk memulai!</p>
        <p class="meaning"></p>
        <button class="show-btn" onclick="showMeaning()">Tampilkan Arti</button>
        <button class="next-btn" onclick="nextWord()">Selanjutnya</button>
        <button class="reset-btn" onclick="resetWords()">Reset</button>
        
        <div class="input-container">
            <h2>Tambahkan Kosakata</h2>
            <input type="text" id="newWord" placeholder="Masukkan kata">
            <input type="text" id="newMeaning" placeholder="Masukkan arti">
            <button onclick="addWord()">Tambah</button>
        </div>
    </div>

    <script>
        let words = [
            { word: "apple", meaning: "apel" },
            { word: "banana", meaning: "pisang" },
            { word: "cat", meaning: "kucing" },
            { word: "dog", meaning: "anjing" },
            { word: "elephant", meaning: "gajah" },
            { word: "flower", meaning: "bunga" },
            { word: "guitar", meaning: "gitar" }
        ];

        let currentIndex = -1;

        function nextWord() {
            if (words.length === 0) {
                document.querySelector(".word").textContent = "Kosakata kosong! Tambahkan kata baru.";
                document.querySelector(".meaning").textContent = "";
                return;
            }
            currentIndex = Math.floor(Math.random() * words.length);
            document.querySelector(".word").textContent = words[currentIndex].word;
            document.querySelector(".meaning").textContent = words[currentIndex].meaning;
            document.querySelector(".meaning").style.display = "none";
        }

        function showMeaning() {
            document.querySelector(".meaning").style.display = "block";
        }

        function addWord() {
            const newWord = document.getElementById("newWord").value.trim();
            const newMeaning = document.getElementById("newMeaning").value.trim();
            
            if (newWord !== "" && newMeaning !== "") {
                words.push({ word: newWord, meaning: newMeaning });
                document.getElementById("newWord").value = "";
                document.getElementById("newMeaning").value = "";
                alert("Kata berhasil ditambahkan!");
            } else {
                alert("Mohon masukkan kata dan artinya.");
            }
        }

        function resetWords() {
            words = [];
            nextWord();
            alert("Semua kosakata telah dihapus.");
        }

        // Memulai dengan kata pertama
        nextWord();
    </script>

</body>
</html>
